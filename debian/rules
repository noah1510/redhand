	dh_compress
	dh_fixperms
	dh_strip
	dh_makeshlibs
	dh_shlibdeps
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

build:
	bash scripts/dependencies.sh --ci
	bash scripts/setup.sh
	dh_testdir
	dh_auto_configure
	dh_auto_build
	dh_auto_test

clean:
	bash scripts/clean.sh
	dh_testdir
	dh_auto_clean
	dh_clean

%:
	dh $@


